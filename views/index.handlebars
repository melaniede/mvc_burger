<h1>Welcome to Eat Da Burgers</h1>

<div>
    <h2>Add a burger to the menu!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca"><strong>Burger Name:</strong></label>
            <input type="text" id="ca" name="name">
            <button class="btn-info" type="submit">Add Burger</button>
        </div>

    </form>
    <hr>
</div>

<div class="card">
    <h3 class="card-header text-white bg-dark">Menu</h2>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
</div>
<br>
<br>
<div class="card">
    <h3 class="card-header text-white bg-dark">Devoured Burgers</h2>
        <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
</div>